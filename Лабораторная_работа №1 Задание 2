#include <iostream>
#include <cmath>

using namespace std;

int main() {
    
    int a;
    
	cout << "Enter a" << "\n";
	cin >> a;
	
int	plos = ((a*a) * sqrt(3))/4;

int Rad = a / sqrt(3);

int rad = a / (2 * sqrt(3));

cout << "Ploshad - " << plos <<"\n";
cout << "Radius opisannoy - " << Rad << "\n";
cout << "Radius vpisannoy - " << rad << "\n";


}
